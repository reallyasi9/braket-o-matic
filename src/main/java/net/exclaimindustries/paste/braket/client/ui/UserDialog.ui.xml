<!DOCTYPE ui:UiBinder SYSTEM "http://dl.google.com/gwt/DTD/xhtml.ent">
<ui:UiBinder xmlns:ui="urn:ui:com.google.gwt.uibinder"
	xmlns:g="urn:import:com.google.gwt.user.client.ui">

	<ui:with field='res'
		type='net.exclaimindustries.paste.braket.client.resources.Resources' />

	<ui:style>
		.name {
			width: 100%;
			font-size: 14pt;
			font-weight: bold;
			text-align: center;
			font-family: monospace;
		}
	</ui:style>
	<g:FlowPanel>

		<g:Label styleName="{res.style.dialogText}">This is how your name will be displayed:</g:Label>
		<g:Label ui:field="name" styleName="{style.name}" />
		<g:Label styleName="{res.style.dialogText}">You can change your name below.</g:Label>

		<g:Grid addStyleNames="{res.style.formContainer}">
			<g:row>
				<g:customCell>
					<g:Label addStyleNames="{res.style.formDescription}">First name</g:Label>
				</g:customCell>
				<g:customCell>
					<g:TextBox addStyleNames="{res.style.formField}"
						ui:field="firstName" />
				</g:customCell>
			</g:row>
			<g:row>
				<g:customCell>
					<g:Label addStyleNames="{res.style.formDescription}">Last name</g:Label>
				</g:customCell>
				<g:customCell>
					<g:TextBox addStyleNames="{res.style.formField}"
						ui:field="lastName" />
				</g:customCell>
			</g:row>
			<g:row>
				<g:customCell>
					<g:Label addStyleNames="{res.style.formDescription}">Clever nickname</g:Label>
				</g:customCell>
				<g:customCell>
					<g:TextBox addStyleNames="{res.style.formField}"
						ui:field="nickname" />
				</g:customCell>
			</g:row>
		</g:Grid>

		<g:FlowPanel styleName="{res.style.buttonContainer}">
			<g:Button ui:field="cancelButton" styleName="{res.style.blueButton}"
				addStyleNames="{res.style.leftButton}">cancel</g:Button>
			<g:Button ui:field="saveButton" styleName="{res.style.redButton}"
				addStyleNames="{res.style.rightButton}">save</g:Button>
		</g:FlowPanel>

	</g:FlowPanel>

</ui:UiBinder> 