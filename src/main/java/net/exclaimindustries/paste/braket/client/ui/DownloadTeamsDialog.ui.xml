<!DOCTYPE ui:UiBinder SYSTEM "http://dl.google.com/gwt/DTD/xhtml.ent">
<ui:UiBinder xmlns:ui="urn:ui:com.google.gwt.uibinder"
	xmlns:g="urn:import:com.google.gwt.user.client.ui">

	<ui:with field='res'
		type='net.exclaimindustries.paste.braket.client.resources.Resources' />

	<ui:style>
		
	</ui:style>
	<g:FlowPanel>
		<g:HorizontalPanel>
			<g:FlowPanel>
				<g:Grid addStyleNames="{res.style.formContainer}">
					<g:row>
						<g:customCell>
							<g:Label addStyleNames="{res.style.formDescription}">ESPN team id</g:Label>
						</g:customCell>
						<g:customCell>
							<g:TextBox addStyleNames="{res.style.formField}"
								ui:field="espnId" />
						</g:customCell>
					</g:row>
				</g:Grid>
				<g:FlowPanel styleName="{res.style.buttonContainer}">
					<g:Button ui:field="downloadButton" styleName="{res.style.blueButton}">download</g:Button>
				</g:FlowPanel>
			</g:FlowPanel>

			<g:FlowPanel>
				<g:Grid addStyleNames="{res.style.formContainer}">
				    <g:row>
				    <g:customCell>
				    <g:Image ui:field="teamImage" />
				    </g:customCell>
				    </g:row>
					<g:row>
						<g:customCell>
							<g:Label addStyleNames="{res.style.formDescription}">ESPN Id</g:Label>
						</g:customCell>
						<g:customCell>
							<g:TextBox addStyleNames="{res.style.formField}"
								ui:field="espnIdFixed" enabled="false" />
						</g:customCell>
					</g:row>
					<g:row>
						<g:customCell>
							<g:Label addStyleNames="{res.style.formDescription}">School name</g:Label>
						</g:customCell>
						<g:customCell>
							<g:TextBox addStyleNames="{res.style.formField}"
								ui:field="schoolName" />
						</g:customCell>
					</g:row>
					<g:row>
						<g:customCell>
							<g:Label addStyleNames="{res.style.formDescription}">Team name</g:Label>
						</g:customCell>
						<g:customCell>
							<g:TextBox addStyleNames="{res.style.formField}"
								ui:field="teamName" />
						</g:customCell>
					</g:row>
					<g:row>
						<g:customCell>
							<g:Label addStyleNames="{res.style.formDescription}">Abbreviation</g:Label>
						</g:customCell>
						<g:customCell>
							<g:TextBox addStyleNames="{res.style.formField}"
								ui:field="abbreviation" />
						</g:customCell>
					</g:row>
					<g:row>
						<g:customCell>
							<g:Label addStyleNames="{res.style.formDescription}">Seed</g:Label>
						</g:customCell>
						<g:customCell>
							<g:TextBox addStyleNames="{res.style.formField}"
								ui:field="seed" />
						</g:customCell>
					</g:row>
					<g:row>
						<g:customCell>
							<g:Label addStyleNames="{res.style.formDescription}">Index</g:Label>
						</g:customCell>
						<g:customCell>
							<g:TextBox addStyleNames="{res.style.formField}"
								ui:field="index" />
						</g:customCell>
					</g:row>
					<g:row>
						<g:customCell>
							<g:Label addStyleNames="{res.style.formDescription}">Win percentage</g:Label>
						</g:customCell>
						<g:customCell>
							<g:TextBox addStyleNames="{res.style.formField}"
								ui:field="wpct" />
						</g:customCell>
					</g:row>
					<g:row>
						<g:customCell>
							<g:Label addStyleNames="{res.style.formDescription}">Kenpom score</g:Label>
						</g:customCell>
						<g:customCell>
							<g:TextBox addStyleNames="{res.style.formField}"
								ui:field="kenpom" />
						</g:customCell>
					</g:row>
					<g:row>
						<g:customCell>
							<g:Label addStyleNames="{res.style.formDescription}">Team color</g:Label>
						</g:customCell>
						<g:customCell>
							<g:TextBox addStyleNames="{res.style.formField}"
								ui:field="color" />
						</g:customCell>
					</g:row>
				</g:Grid>
				<g:FlowPanel styleName="{res.style.buttonContainer}">
					<g:Button ui:field="cancelButton" styleName="{res.style.blueButton}"
						addStyleNames="{res.style.leftButton}">cancel</g:Button>
					<g:Button ui:field="saveButton" styleName="{res.style.redButton}"
						addStyleNames="{res.style.rightButton}">save</g:Button>
				</g:FlowPanel>
			</g:FlowPanel>
		</g:HorizontalPanel>
	</g:FlowPanel>
</ui:UiBinder> 