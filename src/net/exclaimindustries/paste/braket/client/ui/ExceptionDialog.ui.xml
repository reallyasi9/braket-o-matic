<!DOCTYPE ui:UiBinder SYSTEM "http://dl.google.com/gwt/DTD/xhtml.ent">
<ui:UiBinder xmlns:ui="urn:ui:com.google.gwt.uibinder"
	xmlns:g="urn:import:com.google.gwt.user.client.ui">

	<ui:with field='res'
		type='net.exclaimindustries.paste.braket.client.resources.Resources' />

	<ui:style>
		.errorText {
			color: #dd0000;
			font-size: 11pt;
			font-family: monospace;
			font-weight: bold;
			padding: 16px;
		}
		
		.myButton {
			float: right;
		}
	</ui:style>
	<g:FlowPanel>
		<g:Label styleName="{res.style.dialogText}">The following thing happened, and
			everything broke:</g:Label>
		<g:Label styleName="{style.errorText}" ui:field="errorText" />
		<g:Label styleName="{res.style.dialogText}">It's best to let the experts handle this
			one.</g:Label>
		<g:FlowPanel styleName="{res.style.buttonContainer}">
			<g:Button ui:field="closeButton" styleName="{res.style.redButton}"
				addStyleNames="{style.myButton}">close</g:Button>
		</g:FlowPanel>
	</g:FlowPanel>
</ui:UiBinder> 