<!DOCTYPE ui:UiBinder SYSTEM "http://dl.google.com/gwt/DTD/xhtml.ent">
<ui:UiBinder
    xmlns:ui="urn:ui:com.google.gwt.uibinder"
    xmlns:g="urn:import:com.google.gwt.user.client.ui">

    <ui:style>
        .bracket-popup-team {

        }
        
        .bracket-popup-team-row {
        	
        }
        
        .bracket-popup-instructions {
        	
        }
        
        .bracket-popup-team-icon {
			width:110px;
			height:110px;
		}
    </ui:style>

    <g:FlowPanel>
        <g:FlowPanel styleName="{style.bracket-popup-team}">
            <g:FlowPanel styleName="{style.bracket-popup-team-row}">
                <g:Image ui:field="teamIcon" styleName="{style.bracket-popup-team-icon}" />
            </g:FlowPanel>

            <g:FlowPanel styleName="{style.bracket-popup-team-row}">
                <g:FlowPanel styleName="{style.bracket-popup-instructions}">
                    <g:InlineLabel>Select a team:</g:InlineLabel>
                    <g:ListBox ui:field="listBox" />
                </g:FlowPanel>
            </g:FlowPanel>
            <g:Button ui:field="submitButton" text="Submit" />
        </g:FlowPanel>
    </g:FlowPanel>
</ui:UiBinder> 