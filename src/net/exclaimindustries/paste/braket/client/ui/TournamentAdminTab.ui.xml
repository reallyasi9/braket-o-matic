<!DOCTYPE ui:UiBinder SYSTEM "http://dl.google.com/gwt/DTD/xhtml.ent">
<ui:UiBinder xmlns:ui="urn:ui:com.google.gwt.uibinder"
  xmlns:g="urn:import:com.google.gwt.user.client.ui"
  xmlns:b="urn:import:net.exclaimindustries.paste.braket.client.ui">
  <ui:style>
  .horizontal-panel-emulation {
    float: left;
  }
  .left-panel {
    width: 300px;
  }
  
  .right-panel {
    width: 500px;
  }
  </ui:style>

  <g:FlowPanel>
    <b:ShowMorePagerPanel ui:field="pagerPanel"
      styleName="{style.horizontal-panel-emulation}" addStyleNames="{style.left-panel}"/>
    <b:TournamentInfoPanel ui:field="tournamentInfoPanel"
      styleName="{style.horizontal-panel-emulation}" addStyleNames="{style.right-panel}"/>
  </g:FlowPanel>
</ui:UiBinder> 