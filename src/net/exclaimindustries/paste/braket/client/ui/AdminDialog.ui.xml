<!DOCTYPE ui:UiBinder SYSTEM "http://dl.google.com/gwt/DTD/xhtml.ent">
<ui:UiBinder xmlns:ui="urn:ui:com.google.gwt.uibinder"
	xmlns:g="urn:import:com.google.gwt.user.client.ui">

	<ui:with field='res'
		type='net.exclaimindustries.paste.braket.client.resources.Resources' />

	<ui:style>
		
	</ui:style>

	<g:VerticalPanel horizontalAlignment="ALIGN_CENTER"
		spacing="8">
		<g:Button ui:field="createTournamentButton" styleName="{res.style.blueButton}">create
			new tournament</g:Button>
		<g:Button ui:field="changeTournamentButton" styleName="{res.style.blueButton}">change
			the current tournament</g:Button>
		<g:Button ui:field="modifyTournamentButton" styleName="{res.style.blueButton}">modify
			the current tournament</g:Button>
		<g:Button ui:field="rulesButton" styleName="{res.style.blueButton}">set rules for
			the
			current tournament</g:Button>
		<g:Button ui:field="downloadTeamsButton" styleName="{res.style.blueButton}">download
			team information from ESPN</g:Button>
		<g:Button ui:field="modifyTeamsButton" styleName="{res.style.blueButton}">modify teams
			for current tournament</g:Button>
		<g:Button ui:field="modifyGamesButton" styleName="{res.style.blueButton}">modify games
			for current tournament</g:Button>
		<g:Button ui:field="modifyUsersButton" styleName="{res.style.blueButton}">modify users</g:Button>
		<g:Button ui:field="expectoButton" styleName="{res.style.redButton}">signal
			expect-o-matic to begin</g:Button>
	</g:VerticalPanel>
</ui:UiBinder> 