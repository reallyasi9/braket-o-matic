<!DOCTYPE ui:UiBinder SYSTEM "http://dl.google.com/gwt/DTD/xhtml.ent">
<ui:UiBinder xmlns:ui="urn:ui:com.google.gwt.uibinder"
	xmlns:g="urn:import:com.google.gwt.user.client.ui" xmlns:d="urn:import:com.google.gwt.user.datepicker.client"
	xmlns:s="urn:import:com.summatech.gwt.client">
	<ui:style>
	
	</ui:style>
	<g:HTMLPanel>
		<table>
			<tr>
				<td align='center' colspan='2'>Tournament Info</td>
			</tr>
			<tr>
				<td align='right'>Name:</td>
				<td align='left'>
					<g:TextBox ui:field='nameBox' />
				</td>
			</tr>
			<tr>
				<td align='right'>Start date:</td>
				<td align='left'>
					<d:DateBox ui:field='startDateBox' />
				</td>
			</tr>
			<tr>
				<td align='right'>Start time:</td>
				<td align='left'>
					<s:HourMinutePicker ui:field='startTimeBox' />
				</td>
			</tr>
			<tr>
				<td align='right'>Current tournament:</td>
				<td align='left'>
					<g:CheckBox ui:field='currentCheckBox' enabled='false' />
				</td>
			</tr>
			<tr>
				<td align='right'>Buy-in value:</td>
				<td align='left'>
					<g:TextBox ui:field='buyInBox' />
				</td>
			</tr>
			<tr>
				<td align='right'>Pay-out values:</td>
				<td align='left'>
				</td>
			</tr>
			<tr>
				<td align='right'>Upset point value:</td>
				<td align='left'>
					<g:TextBox ui:field='upsetBox' />
				</td>
			</tr>
			<tr>
				<td align='center' colspan='2'>
					<g:Button ui:field='createButton'>Create tournament</g:Button>
					<g:Button ui:field='updateButton'>Update tournament</g:Button>
					<g:Button ui:field='selectButton'>Set as current tournament</g:Button>
				</td>
			</tr>
		</table>
	</g:HTMLPanel>
</ui:UiBinder> 