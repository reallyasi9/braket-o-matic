<!DOCTYPE ui:UiBinder SYSTEM "http://dl.google.com/gwt/DTD/xhtml.ent">
<ui:UiBinder xmlns:ui="urn:ui:com.google.gwt.uibinder"
  xmlns:g="urn:import:com.google.gwt.user.client.ui"
  xmlns:d="urn:import:com.google.gwt.user.datepicker.client"
  xmlns:s="urn:import:com.summatech.gwt.client">
  <ui:style>
  
  </ui:style>
  <g:HTMLPanel>
    <table>
      <tr>
        <td align="center" colspan="2">Tournament Info</td>
        <td />
      </tr>
      <tr>
        <td align="right">Name:</td>
        <td align="left">
          <g:TextBox ui:field="nameBox" />
        </td>
        <td align="left">
          <g:Label ui:field="nameStatus" />
        </td>
      </tr>
      <tr>
        <td align="right">Start date:</td>
        <td align="left">
          <d:DateBox ui:field="startDateBox" />
        </td>
        <td align="left">
          <g:Label ui:field="startDateStatus" />
        </td>
      </tr>
      <tr>
        <td align="right">Start time:</td>
        <td align="left">
          <s:HourMinutePicker ui:field="startTimeBox" />
        </td>
        <td align="left">
          <g:Label ui:field="startTimeStatus" />
        </td>
      </tr>
      <tr>
        <td align="right">Active tournament:</td>
        <td align="left">
          <g:InlineLabel ui:field="currentLabel" />
          <g:Button ui:field="selectButton" enabled="false">Activate tournament</g:Button>
        </td>
        <td align="left">
          <g:Label ui:field="currentStatus" />
        </td>
      </tr>
      <tr>
        <td align="right">Buy-in value:</td>
        <td align="left">
          <g:DoubleBox ui:field="buyInBox" />
        </td>
        <td align="left">
          <g:Label ui:field="buyInStatus" />
        </td>
      </tr>
      <tr>
        <td align="right">Pay-out values:</td>
        <td align="left">
          <g:TextBox ui:field="payOutValuesBox" /><br />
          <g:CheckBox ui:field="payOutValuesRemainderCheckBox" enabled="false"/>
          <g:InlineLabel ui:field="payOutValuesRemainderLabel">Pay out remainder to 1st place</g:InlineLabel>
        </td>
        <td align="left">
          <g:Label ui:field="payOutValuesStatus" />
        </td>
      </tr>
      <tr>
        <td align="right">Upset point value:</td>
        <td align="left">
          <g:DoubleBox ui:field="upsetBox" />
        </td>
        <td align="left">
          <g:Label ui:field="upsetStatus" />
        </td>
      </tr>
      <tr>
        <td align="center" colspan="3">
          <g:Button ui:field="deleteButton" enabled="false">Delete tournament</g:Button>
          <g:Button ui:field="createButton">Create tournament</g:Button>
          <g:Button ui:field="updateButton" enabled="false">Update tournament</g:Button>
        </td>
      </tr>
    </table>
  </g:HTMLPanel>
</ui:UiBinder> 