<!DOCTYPE ui:UiBinder SYSTEM "http://dl.google.com/gwt/DTD/xhtml.ent">
<ui:UiBinder xmlns:ui="urn:ui:com.google.gwt.uibinder"
	xmlns:g="urn:import:com.google.gwt.user.client.ui">
	<ui:style>
		.topBanner {
			/* to allow the internal stuff to be positioned absolutely */
			display: relative;
			height: 100px;
			margin: 0px;
			border-width: 0px;
			border-bottom: solid 2px #222730;
			background: rgb(96, 108, 136); /* Old browsers */
			background: -moz-radial-gradient(center, ellipse cover, rgba(96, 108, 136, 1)
				0%, rgba(63, 76, 107, 1) 100%); /* FF3.6+ */
			background: -webkit-gradient(radial, center center, 0px, center center, 100%,
				color-stop(0%, rgba(96, 108, 136, 1)),
				color-stop(100%, rgba(63, 76, 107, 1))); /* Chrome,Safari4+ */
			background: -webkit-radial-gradient(center, ellipse cover, rgba(96, 108, 136, 1)
				0%, rgba(63, 76, 107, 1) 100%); /* Chrome10+,Safari5.1+ */
			background: -o-radial-gradient(center, ellipse cover, rgba(96, 108, 136, 1)
				0%, rgba(63, 76, 107, 1) 100%); /* Opera 12+ */
			background: -ms-radial-gradient(center, ellipse cover, rgba(96, 108, 136, 1)
				0%, rgba(63, 76, 107, 1) 100%); /* IE10+ */
			background: radial-gradient(ellipse at center, rgba(96, 108, 136, 1) 0%,
				rgba(63, 76, 107, 1) 100%); /* W3C */
		}
		
		.pageTitle {
			position: relative;
			float: left;
			left: 16px;
			top: 50%;
			margin-top: -40px;
			height: 80px;
			line-height: 80px;
			vertical-align: middle;
			color: #FFFFFF;
			font-weight: bold;
			text-decoration: none;
			text-shadow: 1px 1px 0px #222730;
			font-size: 30pt;
			vertical-align: middle;
		}
		
		.pageTitle a,.pageTitle a:hover,.pageTitle a:active,.pageTitle a:visited
			{
			color: #FFFFFF;
			text-decoration: none;
		}
		
		.tournamentName {
			position: absolute;
			right: 16px;
			bottom: 4px;
			color: #FFF;
			font-size: 12pt;
			text-shadow: 1px 1px 0px #222730;
		}
	</ui:style>
	<g:FlowPanel styleName="{style.topBanner}">
		<g:Hyperlink ui:field="bannerLink" styleName="{style.pageTitle}"
			targetHistoryToken="braket">&lt;
			braket | o | matic
			&gt;</g:Hyperlink>
		<g:Label ui:field="tournamentName" styleName="{style.tournamentName}" />
	</g:FlowPanel>
</ui:UiBinder> 