<!DOCTYPE ui:UiBinder SYSTEM "http://dl.google.com/gwt/DTD/xhtml.ent">
<ui:UiBinder xmlns:ui="urn:ui:com.google.gwt.uibinder"
	xmlns:g="urn:import:com.google.gwt.user.client.ui">

	<ui:style type="net.exclaimindustries.paste.braket.client.ui.Toast.MyStyle">
		.toastPopup {
			overflow: visible;
			height: 0px;
			width: 100%;
			border: 0px;
			margin: 0px;
			padding: 0px;
		}
		
		.toast {
			width: 60%;
			padding: 6px;
			top: 3px;
			margin-left: auto;
			margin-right: auto;
			opacity: 0.9;
			background-color: #ff9;
			border: 1px solid #a8a865;
			height: 20px;
		}
		
		.toastText {
			color: #545432;
			font-size: 10pt;
			line-height: 20px;
			vertical-align: center;
			float: left;
		}
		
		.toastClose {
			float: right;
			line-height: 20px;
			vertical-align: center;
			color: #545432;
			font-size: 9pt;
		}
	</ui:style>

	<g:FlowPanel styleName="{style.toast}" ui:field="toast">
		<g:Label ui:field="toastText" styleName="{style.toastText}" />
		<g:Label ui:field="toastClose" styleName="{style.toastClose}">(click anywhere to close)</g:Label>
	</g:FlowPanel>

</ui:UiBinder> 