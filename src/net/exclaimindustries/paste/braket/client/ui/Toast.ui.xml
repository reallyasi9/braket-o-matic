<!DOCTYPE ui:UiBinder SYSTEM "http://dl.google.com/gwt/DTD/xhtml.ent">
<ui:UiBinder xmlns:ui="urn:ui:com.google.gwt.uibinder"
	xmlns:g="urn:import:com.google.gwt.user.client.ui">

	<ui:style type="net.exclaimindustries.paste.braket.client.ui.Toast.Style">
	.toastPopup {
		overflow: visible;
		height: 0;
		width: 100%;
		border: 0;
		margin: 0;
		padding: 0;
	}
	
	.messageToast,.errorToast {
		width: 60%;
		padding: 3pt;
		top: 2pt;
		margin-left: auto;
		margin-right: auto;
		opacity: 0.9;
		height: 18pt;
	}
	
	.messageToast {
		background-color: #ff9;
		border: 1pt solid #a8a865;
	}
	
	.errorToast {
		background-color: #ffafaf;
		border: 1pt solid #a86565;
	}
	
	.toastText {
		color: #545432;
		font-size: 12pt;
		line-height: 18pt;
		vertical-align: center;
		float: left;
	}
	
	.toastClose {
		float: right;
		line-height: 18pt;
		vertical-align: center;
		color: #545454;
		font-size: 9pt;
	}
	</ui:style>

	<g:FlowPanel ui:field="toast">
		<g:Label ui:field="toastText" styleName="{style.toastText}" />
		<g:Label ui:field="toastClose" styleName="{style.toastClose}">(click anywhere to
			dismiss)</g:Label>
	</g:FlowPanel>

</ui:UiBinder> 