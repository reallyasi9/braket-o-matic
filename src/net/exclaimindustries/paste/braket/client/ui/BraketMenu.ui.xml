<!DOCTYPE ui:UiBinder SYSTEM "http://dl.google.com/gwt/DTD/xhtml.ent">
<ui:UiBinder xmlns:ui="urn:ui:com.google.gwt.uibinder"
	xmlns:g="urn:import:com.google.gwt.user.client.ui">

	<ui:import
		field="net.exclaimindustries.paste.braket.client.resources.UiConstants.HistoryToken.*" />

	<ui:style>
	.menu-button {
		display: inline-block;
		height: 32pt;
		line-height: 32pt;
		vertical-align: center;
		padding-left: 8pt;
		padding-right: 8pt;
		cursor: pointer;
		border-right: 1px solid #888888;
		font-size: 14pt;
	}
	
	.menu-button a:link,.menu-button a:hover,.menu-button a:active,.menu-button a:visited,.logout-button,.logout-button:active,.logout-button:hover,.logout-button:visited
		{
		text-decoration: none;
		color: #666666 !important;
	}
	
	.logout-button {
		float: right;
		border-left: 1px solid #888888;
		border-right: 0px;
	}
	
	.panel {
		background: #ffffff; /* Old browsers */
		background: -moz-linear-gradient(top, #ffffff 0%, #e5e5e5 100%);
		/* FF3.6+ */
		background: -webkit-gradient(linear, left top, left bottom, color-stop(0%, #ffffff),
			color-stop(100%, #e5e5e5)); /* Chrome,Safari4+ */
		background: -webkit-linear-gradient(top, #ffffff 0%, #e5e5e5 100%);
		/* Chrome10+,Safari5.1+ */
		background: -o-linear-gradient(top, #ffffff 0%, #e5e5e5 100%);
		/* Opera 11.10+ */
		background: -ms-linear-gradient(top, #ffffff 0%, #e5e5e5 100%);
		/* IE10+ */
		background: linear-gradient(to bottom, #ffffff 0%, #e5e5e5 100%);
		height: 32pt;
		overflow: overlay;
	}
	</ui:style>
	<g:FlowPanel styleName="{style.panel}">
		<g:Hyperlink styleName="{style.menu-button}"
			targetHistoryToken="{TOURNAMENT_STATUS}">Tournament Status</g:Hyperlink>
		<g:Hyperlink styleName="{style.menu-button}"
			targetHistoryToken="{MY_BRACKET}">My Bracket</g:Hyperlink>
		<g:Hyperlink styleName="{style.menu-button}"
			targetHistoryToken="{LEADERBOARDS}">Leaderboards</g:Hyperlink>
		<g:Hyperlink styleName="{style.menu-button}"
			targetHistoryToken="{EXCITE_O_MATIC}">Excite-o-Matic</g:Hyperlink>
	</g:FlowPanel>
</ui:UiBinder> 