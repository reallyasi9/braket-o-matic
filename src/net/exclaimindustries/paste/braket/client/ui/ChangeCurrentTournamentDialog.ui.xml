<!DOCTYPE ui:UiBinder SYSTEM "http://dl.google.com/gwt/DTD/xhtml.ent">
<ui:UiBinder xmlns:ui="urn:ui:com.google.gwt.uibinder"
	xmlns:g="urn:import:com.google.gwt.user.client.ui">

	<ui:with field='res'
		type='net.exclaimindustries.paste.braket.client.resources.Resources' />

	<ui:style>
		.name {
			width: 100%;
			font-size: 14pt;
			font-weight: bold;
			text-align: center;
			font-family: monospace;
		}
	</ui:style>

	<g:FlowPanel>
		<g:Label styleName="{res.style.dialogText}">The current tournament is</g:Label>
		<g:Label ui:field="name" styleName="{style.name}" />
		<g:Label styleName="{res.style.dialogText}">Select a new tournament below</g:Label>

		<g:Grid addStyleNames="{res.style.formContainer">
			<g:row>
				<g:customCell>
					<g:Label addStyleNames="{res.style.formDescription}">New current tournament</g:Label>
				</g:customCell>
				<g:customCell>
					<g:ListBox addStyleNames="{res.style.formField}"
						ui:field="listBox" />
				</g:customCell>
			</g:row>
		</g:Grid>

		<g:FlowPanel styleName="{res.style.buttonContainer}">
			<g:Button ui:field="cancelButton" styleName="{res.style.blueButton}"
				addStyleNames="{res.style.leftButton}">cancel</g:Button>
			<g:Button ui:field="saveButton" styleName="{res.style.redButton}"
				addStyleNames="{res.style.rightButton}">save</g:Button>
		</g:FlowPanel>
	</g:FlowPanel>
</ui:UiBinder> 